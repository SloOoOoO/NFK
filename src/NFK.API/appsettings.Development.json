{
  // NOTE: This is a development configuration template with placeholder values.
  // For production, use environment variables or Azure Key Vault for sensitive data.
  // JWT keys can be provided via JWT_PRIVATE_KEY and JWT_PUBLIC_KEY environment variables.
  // The SQL Server password below matches the docker-compose.yml configuration.
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore": "Information"
    }
  },
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost,1433;Database=NFK;User Id=sa;Password=SqlServer2025;TrustServerCertificate=True;MultipleActiveResultSets=true",
    "Redis": "localhost:6379"
  },
  "Jwt": {
    "Issuer": "NFK.API",
    "Audience": "NFK.Client",
    "Secret": "ThisIsAVeryLongSecretKeyForJWTTokenGenerationAtLeast32CharactersLong2025!",
    "PrivateKey": "",
    "PublicKey": "",
    "AccessTokenExpirationMinutes": 5,
    "RefreshTokenExpirationDays": 7
  },
  "OAuth": {
    "Google": {
      "ClientId": "your-google-client-id-placeholder",
      "ClientSecret": "your-google-client-secret-placeholder",
      "Enabled": false
    },
    "Apple": {
      "ClientId": "your-apple-client-id-placeholder",
      "ClientSecret": "your-apple-client-secret-placeholder",
      "TeamId": "your-apple-team-id-placeholder",
      "KeyId": "your-apple-key-id-placeholder",
      "Enabled": false
    },
    "DATEV": {
      "ClientId": "your-datev-client-id-placeholder",
      "ClientSecret": "your-datev-client-secret-placeholder",
      "AuthorizationEndpoint": "https://login.datev.de/openid/authorize",
      "TokenEndpoint": "https://login.datev.de/openid/token",
      "UserInfoEndpoint": "https://login.datev.de/openid/userinfo",
      "Scope": "openid profile email datev:accounting",
      "Enabled": false
    }
  },
  "DATEV": {
    "Sftp": {
      "Host": "sftp-placeholder.datev.de",
      "Port": 22,
      "Username": "datev-username-placeholder",
      "Password": "datev-password-placeholder"
    },
    "ExportPath": "/datev-exports"
  },
  "Email": {
    "SendGrid": {
      "ApiKey": "sendgrid-api-key-placeholder",
      "FromEmail": "noreply@nfk-buchhaltung.de",
      "FromName": "NFK Buchhaltung"
    }
  },
  "Storage": {
    "AzureBlob": {
      "ConnectionString": "UseDevelopmentStorage=true",
      "ContainerName": "documents"
    },
    "LocalPath": "/uploads"
  },
  "Security": {
    "MaxFailedLoginAttempts": 5,
    "AccountLockoutMinutes": 30
  },
  "Encryption": {
    "MasterKey": "DevEncryptionKey32CharactersLong!"
  },
  "Serilog": {
    "Using": [ "Serilog.Sinks.Console", "Serilog.Sinks.File" ],
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Hangfire": "Information"
      }
    },
    "WriteTo": [
      { "Name": "Console" },
      {
        "Name": "File",
        "Args": {
          "path": "logs/nfk-dev-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 7
        }
      }
    ]
  }
}
